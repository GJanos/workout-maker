<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col"></th>
            <% for(var j=0; j < workout.col; j++) {%>
                <th scope="col">
                    <%=`${j+1}. day` %>
                </th>
                <% } %>
        </tr>
    </thead>
    <% for(var i=0; i < workout.row; i++) {%>
            <tr>
            <th scope="row">
            <%=`${i+1}`%>
            </th>
            <% for(var j=0; j < workout.col; j++) {%>
                <td scope="col">
                <% if(workout.exercises[(i*workout.col)+j]){%>
                    <%= workout.exercises[(i*workout.col)+j].name %>
                <% } %>
                </td>
            <% } %>
            </tr>
    <% } %>
</table>